// vectores.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "conio.h"
#include <iostream>
#include "math.h"
#define TAM 10

using namespace std;

float sumatoria(float vec[],int i);
float factorial(int y);
void vectormostrar(float vec[],int n);

void main()
{
	int n;
    float vec[TAM],s;
    cout<<"Ingrese el tamano: ";
    cin>>n;
    s=sumatoria(vec,n);
    vectormostrar(vec,n);
	cout<<"El resultado de la suma es: "<<s;
    getch();
}
float sumatoria(float vec[],int i)
{
	int n,s;
	for(int i=1;i<=n;i++)
	{
		s=s+(powf(i,2*i))/factorial(2*i);
		vec[i-1]=powf(i,2*i)/factorial(2*i);
	}
	return(s);
}
float factorial(int y)
{
	float f=1;
	for(int i=2;i<=y;i++)
	{
		f=f*i;
	}
	return (f);
}
void vectormostrar(float vec[],int n)
{
	for(int i=0;i<n;i++)
	{
		cout<<"["<<i<<"]"<<vec[i];
	}
}
